@page
@model ForgotPasswordModel
@{
    // ViewData["Title"] = "Forgot your password?";
}
<div class="row">
    <div class="col-12 logoContainer">
        <img class="logo" src="https://i.imgur.com/1yxyCKl.png" alt="Forest Churchs Logo" />
    </div>

    <div class="col-12 BodyContainer">
        <h1>Please enter your email to continue...</h1>
        <br />
        <form method="post" class="forgotPasswordForm">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-success">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}